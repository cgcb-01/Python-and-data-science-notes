{
  "git.ignoreLimitWarning": true,
  "jupyter.allowUnauthorizedRemoteConnection": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "notebook.defaultFormatter": "esbenp.prettier-vscode",

  //styling

  "workbench.colorCustomizations": {
    "editor.background": "#000000",
    "sideBar.background": "#000000",
    "editorGutter.background": "#000000",
    "activityBar.background": "#000000",
    "editor.lineHighlightBackground": "#000000",
    "titleBar.activeBackground": "#000000",
    "titleBar.inactiveBackground": "#000000",
    "statusBar.background": "#000000",
    "statusBar.noFolderBackground": "#000000",
    "statusBar.debuggingBackground": "#000000",
    "panel.background": "#000000",
    "tab.activeBackground": "#000000",
    "tab.inactiveBackground": "#000000",
    "editorGroupHeader.tabsBackground": "#000000",
    "editorGroup.emptyBackground": "#000000",
    "activityBar.foreground": "#ffffff", // ← icons like Explorer, Git
    "activityBar.inactiveForeground": "#c5c5c5", // ← dimmed icons
    "sideBar.foreground": "#ffffff", // ← text in sidebar
    "activityBarBadge.background": "#ffe100", // optional: yellow badges
    "activityBarBadge.foreground": "#000000"
  }
}
